<dl class="dl-horizontal">
  <dt><strong><%= t(:author) %>:</strong></dt>
  <dd><%= @book.author %></dd>
  <dt><strong><%= t(:book_title) %>:</strong></dt>
  <dd><%= @book.book_title %></dd>
  <dt><strong><%= t(:publisher) %>:</strong></dt>
  <dd><%= @book.publisher %></dd>
</dl>

<%= link_to t(:back),
book_translations_path, :class => 'btn btn-default'  %>
<%= link_to t(:edit),
edit_book_book_translation_path(@book.book,@book), :class => 'btn btn-default' %>
<%= link_to t(:destroy),
book_translation_path(@book),
:method => 'delete',
:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
:class => 'btn btn-danger' %>
