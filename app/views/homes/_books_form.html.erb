<% if @book %>
<%= form_for [@book,@translate_book],  :html => { :class => "book" } do |f| %>
<div class="form-group">
  <%= label_tag :book_title, t(:book) %> 
  <%= label_tag :book_title, @book.book_title , :class => 'form-control'%>
</div>
<div class="form-group">
  <%= f.text_field :book_title, :class => 'form-control kan-ime' %>
</div>
<div class="form-group">
  <%= link_to(clean_link(@book.book_description.link), target: '_blank') do %> <%= fa_icon "book 2x" %> <% end %>
  <%= f.submit t(:translate), class: "btn btn-default"%> 
</div>
<% end %>
<% else %>
<%= t(:book) %> ಲಿಪ್ಯಂತರಣ  ಪೂರ್ಣಗೊಂಡಿದೆ
<% end %>