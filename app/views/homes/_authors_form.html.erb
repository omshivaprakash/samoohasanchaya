  <%= form_for [@author,@translate_author],  :html => { :class => "book" } do |f| %>
  <div class="form-group">
    <%= label_tag :name, t(:english) %>
    <%= label_tag :name, @author.name , :class => 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :name, t(:kannada) %>
